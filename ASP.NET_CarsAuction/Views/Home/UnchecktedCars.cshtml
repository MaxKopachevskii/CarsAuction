@model IEnumerable<ASP.NET_CarsAuction.Models.Car>

@{
    ViewBag.Title = "Index";
}
    <div class="container">
        <center><h4 style="color:white"><strong>Лоты ожидающие подтверждение менеджера</strong></h4></center>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-6 col-sm-6 col-lg-4">
                    <div class="thumbnail background_style">
                        <img src=@item.Img alt="...">
                        <div class="caption">
                            <h3>@item.Name</h3>
                            <p>@item.ShortDesc</p>
                            <strong>Текущая ставка:</strong>
                            <p>@item.Price.ToString("c")</p>
                            <p>@Html.ActionLink("Подтвердить лот", "IsCheckCars", new { id = item.Id }, new { @class = "btn btn-warning" }) @Html.ActionLink("Удалить лот", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

